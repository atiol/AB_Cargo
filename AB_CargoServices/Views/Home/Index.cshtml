                    @using (Html.BeginForm("GetTrackingInfo", "Cargo", FormMethod.Get, new {@class = "form-inline"}))
                    {
                        @Html.AntiForgeryToken();
                        @Html.ValidationSummary(true);
                        <p>@ViewBag.TrackerMsg</p>
                        <div class="input-group">
                            @Html.TextBox("TrackingNo", "", new { @class = "form-control", @placeholder = "Tracking ID"})
                            <div class="input-group-btn">
                                <input type="submit" value="Track" class="btn btn-primary btn-flat" data-target="#trmodal" />
                            </div>
                        </div>
                    }
                </div>
                <div>
                    @Html.Partial("_TrackingInfo", Model)
