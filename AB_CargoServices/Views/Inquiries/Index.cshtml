@model IEnumerable<AB_CargoServices.Models.USER_MESSAGES>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}

<section class="content-header">
    <h1>
        User Inquiries
        <small>View, Delete User Inquiries here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">User Inquiries</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Messages</h3>
                </div>
                <div class="box-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NAME)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EMAIL)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MESSAGE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SENT)
                            </th>
                            <th>Action</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EMAIL)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MESSAGE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SENT)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-flat btn-sm" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-flat btn-sm" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-flat btn-sm" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>