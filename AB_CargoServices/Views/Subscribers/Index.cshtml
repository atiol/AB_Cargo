@model IEnumerable<AB_CargoServices.Models.SUBSCRIBER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}
<section class="content-header">
    <h1>
        Subscribers
        <small>View, Delete subscribers</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Subscribers</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <h5 style="color: forestgreen;">@ViewBag.Message</h5>

            @if (Model.Count() <= 0)
            {
                <div class="box box-warning">
                    <div class="box-header">
                        <h3 class="box-title">Subscribers</h3>
                    </div>
                    <div class="box-body">
                        <h3 style="color:red;">No subscribers available</h3>
                    </div>
                </div>
            }
            else
            {
               <div class="box box-primary">
                   <div class="box-header">
                       <h3 class="box-title">Subscribers</h3>
                   </div>
                   <div class="box-body">
                       <table class="table table-striped">
                           <tr>
                               <th>
                                   @Html.DisplayNameFor(model => model.NAME)
                               </th>
                               <th>
                                   @Html.DisplayNameFor(model => model.EMAIL)
                               </th>
                               <th>ACTION</th>
                           </tr>

                           @foreach (var item in Model)
                           {
                               <tr>
                                   <td>
                                       @Html.DisplayFor(modelItem => item.NAME)
                                   </td>
                                   <td>
                                       @Html.DisplayFor(modelItem => item.EMAIL)
                                   </td>
                                   <td>
                                       @Html.ActionLink("Delete", "Delete", new { Email = item.EMAIL }, new { onclick = "return confirm('Are you sure you want to delete subscriber?');", @class = "btn btn-danger btn-flat btn-sm" })
                                   </td>
                               </tr>
                           }
                       </table>
                   </div>
               </div>
            }
        </div>
    </div>
</section>