@using AB_CargoServices.Models
@{
    ViewBag.Title = "CreateCargo";
}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h2 class="text-center">Add New Cargo</h2>
        <br />
        <div class="panel">
            <div class="panel-heading">Sender</div>
            <small class="text-info">@ViewBag.Message</small>
            <div class="panel-body">
                @using (Html.BeginForm("CreateSender", "Cargo", FormMethod.Post, new { @class = "form-inline"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    
                    <div class="form-group">
                        @Html.Label("TC", new { @class = "control-label" })
                        @Html.TextBox("tc", "", new { @class = "form-control" })
                        
                    </div>
                    <div class="form-group">
                        @Html.Label("FirstName", new { @class = "control-label" })
                        @Html.TextBox("fn", "", new { @class = "form-control" })
                       
                    </div>
                    <div class="form-group">
                        @Html.Label("LastName", new { @class = "control-label" })
                        @Html.TextBox("ln", "", new { @class = "form-control" })
                        
                    </div>
                    <div class="form-group">
                        @Html.Label("Address", new { @class = "control-label" })
                        @Html.TextBox("address", "", new { @class = "form-control" })
                       
                    </div>
                    <div class="form-group">
                        @if (ViewBag.Cities != null)
                        {
                            @Html.DropDownList("city", (IEnumerable<SelectListItem>)ViewBag.Cities, "select city...")
                        }
                        else
                        {
                            //@Html.DropDownList("city", new SelectList(Model.Cities, "Ankara"), "select city...")
                            @Html.Label("City", new { @class = "control-label" })
                            @Html.TextBox("city", "", new { @class = "form-control" })
               
                        }
                    </div>
                    <div class="form-group">
                        @Html.Label("Phone", new { @class = "control-label" })
                        @Html.TextBox("phone", "", new { @class = "form-control" })
                      
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

